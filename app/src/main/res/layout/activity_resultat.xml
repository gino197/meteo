<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="?colorPrimaryDark">
        <Button
            android:id="@+id/btn_retour"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_margin="8dp"
            android:text="Retour"
            android:drawableLeft="@drawable/ic_arrow_left"
            android:background="@drawable/back_item_ville"
            android:textColor="@color/gray_800"
            android:drawableTint="@color/gray_800"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-light"/>
        
    </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back_result_details"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="-70dp">
            <LinearLayout
                android:id="@+id/layout_meteo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_launcher_meteo"
                    android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/txtMeteo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Météo"
                android:layout_gravity="center_vertical"
                android:fontFamily="sans-serif-light"
                android:layout_marginLeft="8dp"
                android:textSize="22dp"/> 
            </LinearLayout>
            <TextView
                android:id="@+id/txtTemp"
                android:layout_below="@+id/layout_meteo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="36°C"
                android:textSize="30dp"
                android:fontFamily="sans-serif-black"/> 
            <TextView
                android:id="@+id/txtVitesse"
                android:layout_below="@+id/txtTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vitesse du vent: 3.2"
                android:textSize="14dp"
                android:layout_marginTop="14dp"
                android:fontFamily="sans-serif-light"/> 

            <TextView
                android:id="@+id/txtLon"
                android:layout_below="@+id/txtVitesse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Longitude: 0.0"
                android:textSize="14dp"
                android:fontFamily="sans-serif-light"/> 
            
            <TextView
                android:id="@+id/txtLat"
                android:layout_below="@+id/txtLon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Latitude: 0.0"
                android:textSize="14dp"
                android:fontFamily="sans-serif-light"/> 
            
            <TextView
                android:id="@+id/txtHeure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="55dp"
                android:text="12:00"
                android:textSize="20dp"
                android:fontFamily="sans-serif-black"/> 
            <TextView
                android:id="@+id/txtDate"
                android:layout_below="@+id/txtHeure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="11 Mai 2022"
                android:textSize="14dp"
                android:fontFamily="sans-serif-light"/>            
            
            <TextView
                android:id="@+id/txtVille"
                android:layout_below="@+id/txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Antsirabe"
                android:textSize="18dp"
                android:fontFamily="sans-serif-light"/>  
        </RelativeLayout> 
</LinearLayout>
